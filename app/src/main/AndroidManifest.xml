<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.villagebanking">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_money"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_money"
        android:supportsRtl="true"
        android:theme="@style/Theme.VillageBanking">
        <activity android:name=".AccountDetails"
            android:parentActivityName=".AccountHolders"/>
        <activity android:name=".AccountHolders"
            android:parentActivityName=".Home"/>
        <activity android:name=".Home"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>